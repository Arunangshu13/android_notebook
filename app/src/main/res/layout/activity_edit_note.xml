<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".EditNote">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/heading_edit"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#1A237E"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Edit Note" />
        <TextView
            android:id="@+id/note_date_edit"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:textColor="#1A237E"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_height="70dp"
            android:text="DD / MM / YYYY"
            />
        <TextView
            android:id="@+id/note_time_edit"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="20dp"
            android:paddingRight="30dp"
            android:textColor="#1A237E"
            android:layout_height="70dp"
            android:text="00 : 00"
            />
        <EditText
            android:id="@+id/note_title_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#1A237E"
            android:textColorHint="#1A237E"
            android:background="@drawable/edit_text_rnd_light"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:hint="Title"/>

        <EditText
            android:id="@+id/note_content_edit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:ems="10"
            android:hint="Your note goes here."
            android:textColor="#1A237E"
            android:textColorHint="#1A237E"
            android:background="@drawable/edit_text_rnd_light"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/save_note_edit"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />


    </LinearLayout>
</ScrollView>