<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whitesmoke"
    android:layout_height="match_parent"
    tools:context=".NoteManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/note_date_mn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#1A237E"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="DD / MM / YYYY"

                android:textSize="17dp" />

            <TextView
                android:id="@+id/note_time_mn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/note_date_mn"
                android:layout_marginTop="35dp"
                android:text="HH : MM"
                android:textColor="#1A237E"
                android:layout_marginLeft="20dp"
                android:textSize="17dp" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:text="DELETE"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_toStartOf="@+id/delete_btn"
                android:layout_toLeftOf="@+id/delete_btn"
                android:text="EDIT"
                android:textColor="@color/white" />
        </RelativeLayout>
        <TextView
            android:id="@+id/note_title_mn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:textColor="#1A237E"
             />
        <TextView
            android:id="@+id/note_content_mn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="17dp"
            android:textColor="#1A237E"
             />
    </LinearLayout>
</ScrollView>